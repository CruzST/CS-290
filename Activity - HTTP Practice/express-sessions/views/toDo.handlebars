<h1>Hello {{name}}. Here is your To Do List!</h1>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<form method="post">
  Description: <input type="text" name="name" placeholder="wash the car" id="toDoName">
  City: <input type="text" name="city" placeholder="Lodi" id="cityName">
  Min temp: <input type="number" name="minTemp" placeholder="60" id="minTemp">
  <input type="submit" name="Add Item" value="Add Item">
</form>
{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    {{#if this.color}}
      <h3 style="color:green;">{{this.name}}</h3>
    {{else}}
      <h3 style="color:red;">{{this.name}}</h3>
    {{/if}}
    
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
    </form>
  </li>

  <li>
  <h3>{{this.city}}</h3>
  <form method="post">
    <input type="hidden" name="id" value="{{this.id}}">
  </form>
</li>

<li>
  <h3>{{this.minTemp}}</h3>
  <form method="post">
    <input type="hidden" name="id" value="{{this.id}}">
    <input type="submit" name="Done" value="Mark as Done">
  </form>
</li>
  {{/each}}
</ul>
{{/if}}